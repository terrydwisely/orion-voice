{
  "name": "orion-voice",
  "version": "0.1.0",
  "description": "Orion Voice â€” AI-powered voice assistant desktop app",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build:react": "tsc && vite build",
    "build": "npm run build:react && electron-builder",
    "preview": "vite preview"
  },
  "build": {
    "appId": "com.orion.voice",
    "productName": "Orion Voice",
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    }
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "framer-motion": "^11.5.0",
    "lucide-react": "^0.441.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.26.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "electron": "^31.7.7",
    "electron-builder": "^25.0.5",
    "postcss": "^8.4.45",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "vite": "^5.4.3",
    "wait-on": "^8.0.0"
  }
}
